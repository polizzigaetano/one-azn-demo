{
  "definitions": [
    {
      "title": "Carousel",
      "id": "carousel",
      "model": "carousel",
      "filter": "carousel",
      "plugins": {
        "da": {
          "rows": 1,
          "columns": 2
        }
      }
    },
    {
      "title": "Carousel Slide",
      "id": "carousel-item",
      "model": "carousel-item",
      "plugins": {
        "da": {
          "rows": 1,
          "columns": 2,
          "fields": [
            { "name": "image", "selector": "div:nth-child(1)>picture>img[src]" },
            { "name": "imageAlt", "selector": "div:nth-child(1)>picture>img[alt]" },
            { "name": "text", "selector": "div:nth-child(2)" }
          ]
        }
      }
    }
  ],
  "models": [
    {
      "id": "carousel",
      "fields": [
        {
          "component": "multiselect",
          "name": "classes",
          "label": "Style",
          "valueType": "string",
          "options": [
            {
              "name": "Layout",
              "children": [
                { "name": "Hero", "value": "hero" },
                { "name": "Image Left", "value": "image-left" },
                { "name": "Image Only", "value": "image-only" }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "carousel-item",
      "fields": [
        {
          "component": "reference",
          "valueType": "string",
          "name": "image",
          "label": "Background Image",
          "multi": false
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "imageAlt",
          "label": "Background Image Alt"
        },
        {
          "component": "richtext",
          "name": "text",
          "value": "",
          "label": "Content",
          "valueType": "string"
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "carousel",
      "components": [
        "carousel-item"
      ]
    }
  ]
}
